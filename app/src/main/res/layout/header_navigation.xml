<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/baseline_component_unit">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:background="@color/accentPinkA200"
        android:id="@+id/thumbnailImageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:paddingLeft="@dimen/baseline_content_unit"
        android:paddingRight="@dimen/baseline_content_unit"
        android:paddingTop="@dimen/baseline_component_unit"
        android:paddingBottom="@dimen/baseline_component_unit"
        android:textColor="@color/white"
        android:textSize="@dimen/typography_title"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/sourceTextView" />

</FrameLayout>