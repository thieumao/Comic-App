<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/empty"/>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/baseline_grid_unit"
        android:clipToPadding="false"
        android:verticalSpacing="@dimen/baseline_grid_unit"
        android:horizontalSpacing="@dimen/baseline_grid_unit"
        android:columnWidth="@dimen/grid_item_width"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:drawSelectorOnTop="true"
        android:listSelector="@drawable/item_selector"
        android:fastScrollEnabled="true"
        android:id="@+id/gridView" />

    <com.melnykov.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/baseline_content_unit"
        android:layout_gravity="bottom|left"
        android:src="@drawable/ic_chevron_left_white_24dp"
        fab:fab_colorNormal="@color/primaryBlue500"
        fab:fab_colorPressed="@color/accentPinkA200"
        android:id="@+id/previousButton" />

    <com.melnykov.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/baseline_content_unit"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_chevron_right_white_24dp"
        fab:fab_colorNormal="@color/primaryBlue500"
        fab:fab_colorPressed="@color/accentPinkA200"
        android:id="@+id/nextButton" />

</FrameLayout>