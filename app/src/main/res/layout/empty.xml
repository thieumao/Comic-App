<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/empty_content_minimum_height"
    android:id="@+id/emptyRelativeLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/accentPinkA200"
        android:textStyle="bold|italic"
        android:id="@+id/emptyTextView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emptyTextView"
        android:layout_centerHorizontal="true"
        android:id="@+id/emptyImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/baseline_content_unit"
        android:layout_marginRight="@dimen/baseline_content_unit"
        android:layout_below="@+id/emptyTextView"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/hintText"
        android:gravity="center"
        android:id="@+id/instructionsTextView" />

</RelativeLayout >