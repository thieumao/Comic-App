<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="@string/preference_category_general_key"
        android:title="@string/preference_category_general_title">
        <Preference
            android:key="@string/preference_view_google_play_key"
            android:title="@string/preference_view_google_play_title"
            android:summary="@string/preference_view_google_play_summary"/>
        <Preference
            android:key="@string/preference_view_disclaimer_key"
            android:title="@string/preference_view_disclaimer_title"
            android:summary="@string/preference_view_disclaimer_summary"/>
        <ListPreference
            android:key="@string/preference_startup_key"
            android:title="@string/preference_startup_title"
            android:summary="@string/preference_startup_title_summary"
            android:dialogTitle="@string/preference_startup_title"
            android:entries="@array/preference_startup_entries"
            android:entryValues="@array/preference_startup_values"
            android:defaultValue="@string/preference_startup_default_value"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="@string/preference_category_catalogue_key"
        android:title="@string/preference_category_catalogue_title">
        <ListPreference
            android:key="@string/preference_source_key"
            android:title="@string/preference_source_title"
            android:summary="@string/preference_source_title_summary"
            android:dialogTitle="@string/preference_source_title"
            android:entries="@array/preference_source_entries"
            android:entryValues="@array/preference_source_values"
            android:defaultValue="@string/preference_source_default_value"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="@string/preference_category_latest_key"
        android:title="@string/preference_category_latest_title">
        <Preference
            android:key="@string/preference_clear_latest_key"
            android:title="@string/preference_clear_latest_title"
            android:summary="@string/preference_clear_latest_summary"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="@string/preference_category_favourite_key"
        android:title="@string/preference_category_favourite_title">
        <Preference
            android:key="@string/preference_clear_favourite_key"
            android:title="@string/preference_clear_favourite_title"
            android:summary="@string/preference_clear_favourite_summary"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="@string/preference_category_recent_key"
        android:title="@string/preference_category_recent_title">
        <Preference
            android:key="@string/preference_clear_recent_key"
            android:title="@string/preference_clear_recent_title"
            android:summary="@string/preference_clear_recent_summary"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="@string/preference_category_viewer_key"
        android:title="@string/preference_category_viewer_title">
        <ListPreference
            android:key="@string/preference_view_type_key"
            android:title="@string/preference_view_type_title"
            android:summary="@string/preference_view_type_title_summary"
            android:dialogTitle="@string/preference_view_type_title"
            android:entries="@array/preference_view_type_entries"
            android:entryValues="@array/preference_view_type_values"
            android:defaultValue="@string/preference_view_type_default_value"/>
        <CheckBoxPreference
            android:key="@string/preference_lazy_loading_key"
            android:title="@string/preference_lazy_loading_title"
            android:summary="@string/preference_lazy_loading_summary"
            android:defaultValue="false"/>
        <CheckBoxPreference
            android:key="@string/preference_direction_key"
            android:title="@string/preference_direction_title"
            android:summary="@string/preference_direction_summary"
            android:defaultValue="false"/>
        <CheckBoxPreference
            android:key="@string/preference_orientation_key"
            android:title="@string/preference_orientation_title"
            android:summary="@string/preference_orientation_summary"
            android:defaultValue="false"/>
        <CheckBoxPreference
            android:key="@string/preference_zoom_key"
            android:title="@string/preference_zoom_title"
            android:summary="@string/preference_zoom_summary"
            android:defaultValue="false"/>
        <Preference
            android:key="@string/preference_clear_image_cache_key"
            android:title="@string/preference_clear_image_cache_title"
            android:summary="@string/preference_clear_image_cache_summary"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="@string/preference_category_download_key"
        android:title="@string/preference_category_download_title">
        <CheckBoxPreference
            android:key="@string/preference_download_wifi_key"
            android:title="@string/preference_download_wifi_title"
            android:summary="@string/preference_download_wifi_summary"
            android:defaultValue="true"/>
        <ListPreference
            android:key="@string/preference_download_storage_key"
            android:title="@string/preference_download_storage_title"
            android:summary="@string/preference_download_storage_title_summary"
            android:dialogTitle="@string/preference_download_storage_title"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="@string/preference_category_developer_key"
        android:title="@string/preference_category_developer_title">
        <Preference
            android:key="@string/preference_view_open_source_licenses_key"
            android:title="@string/preference_view_open_source_licenses_title"/>
    </PreferenceCategory>

</PreferenceScreen>